@model Secretaria.Model.TbMatricula

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>


<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Situacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Situacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AlunoIdAlunoNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AlunoIdAlunoNavigation.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CursoIdCursoNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CursoIdCursoNavigation.NomeCurso)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdMatricula" />
        <input type="submit" value="Deletar" class="btn btn-light btn-sm" /> |
        <a asp-action="Index" class="btn btn-danger btn-sm">Voltar</a>
    </form>
</div>
